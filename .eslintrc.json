{
  "extends": ["prettier-standard/prettier-file", "plugin:import/recommended", "plugin:security/recommended"],
  "plugins": ["security", "import"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "settings": {
    "import/extensions": [".js", ".json"]
  },
  "rules": {
    "security/detect-object-injection": "off",
    "import/no-unresolved": [
      "error",
      {
        "commonjs": true
      }
    ]
  }
}
